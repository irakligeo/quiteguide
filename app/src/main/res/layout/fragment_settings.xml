<?xml version="1.0" encoding="utf-8"?>
<com.mmgct.quitguide2.views.widgets.SlideRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray3">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <include android:id="@+id/header_settings_settings"
        layout="@layout/merge_gray_lined_header" />

    <RelativeLayout
        android:id="@+id/lyt_settings_reset_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_huge_plus">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/ContentTextBlue"
            android:text="@string/reset_profile"/>
    </RelativeLayout>

    <include android:id="@+id/header_settings_notifications"
        layout="@layout/merge_gray_lined_header" />

    <RelativeLayout
        android:id="@+id/lyt_settings_notification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_huge_plus"
        android:background="@drawable/compound_white_gray_onclick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            style="@style/ContentTextBlackLarge"
            android:text="@string/local_notifications"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_alignParentEnd="true"
            android:src="@drawable/small_gray_arrow"
            android:layout_centerVertical="true"
            android:contentDescription="@string/access_right_arrow"/>

        <!--<Switch
            android:id="@+id/switch_settings_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>-->

    </RelativeLayout>

    <include android:id="@+id/header_settings_application"
        layout="@layout/merge_gray_lined_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_huge_plus"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_participant_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            style="@style/ContentTextBlackLarge"
            android:text="@string/participant_id" />

        <EditText
            android:id="@+id/edt_participant_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_participant_id"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_tiny"
            android:background="@drawable/bg_round_rect_white_grayborder"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/spacing_normal"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_huge_plus">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            style="@style/ContentTextBlackLarge"
            android:text="@string/version"/>

        <TextView
            android:id="@+id/txt_version_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            style="@style/ContentTextGrayLarge"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/spacing_normal"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_settings_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_huge_plus"
        android:background="@drawable/compound_white_gray_onclick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_centerVertical="true"
            style="@style/ContentTextBlackLarge"
            android:text="@string/about"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_alignParentEnd="true"
            android:src="@drawable/small_gray_arrow"
            android:layout_centerVertical="true"
            android:contentDescription="@string/access_right_arrow"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/spacing_normal"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_settings_send_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_huge_plus">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/ContentTextBlue"
            android:text="@string/send_feedback"/>
    </RelativeLayout>

</LinearLayout>
</com.mmgct.quitguide2.views.widgets.SlideRelativeLayout>