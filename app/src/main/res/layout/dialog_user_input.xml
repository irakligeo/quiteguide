    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_diag_user_input_error">

        <TextView
            android:id="@+id/input_diag_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            style="@style/ContentHeader"
            android:text="HEADER"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:paddingTop="25dp"
            android:textColor="@color/black"
            android:text="STUB"
            style="@style/ContentText"
            android:id="@+id/input_diag_desc"
            android:paddingBottom="25dp"/>

        <EditText
            android:id="@+id/input_diag_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:background="@drawable/shape_rect_black_border"
            android:hint="@string/hint_short_note"
            android:singleLine="true"/>

        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:paddingTop="25dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:id="@+id/input_diag_dismiss"
            android:textStyle="bold"
            android:textColor="@color/light_blue2"
            android:paddingBottom="25dp"
            android:text="@string/btn_continue"/>

    </LinearLayout>
