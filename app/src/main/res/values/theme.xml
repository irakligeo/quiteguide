<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme is the default theme. -->
    <!--<style name="Theme" parent="android:style/Theme" />-->
    <style name="QuitGuideTheme" parent="@style/Theme.AppCompat" />

    <style name="Theme.QuitGuideTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:seekBarStyle">@style/QGSeekBarTheme</item>
        <item name="android:datePickerStyle">@android:style/Widget.DeviceDefault.DatePicker</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/black</item>
    </style>


    <style name="HelpTimeFragmentTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.DatePicker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:datePickerStyle">@android:style/Widget.DeviceDefault.DatePicker</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- custom progress dialog theme -->

    <style name="CustomAlertDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>






</resources>