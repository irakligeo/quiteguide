        <item name="android:background">@drawable/bg_edittext_repeat</item>
        <item name="android:gravity">top|left</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:maxLines">4</item>
    </style>

